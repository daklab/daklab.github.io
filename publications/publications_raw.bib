	Booktitle = {Proceedings of the 29th Conference on Uncertainty in Artificial Intelligence},
	Eprint = {1309.6858},
	Keywords = {mlstats},
	Title = {{The Supervised IBP: Neighbourhood Preserving Infinite Latent Feature Models}},
